@model csharp_bibliotecaMvc.Models.Libro

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titolo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titolo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Scaffale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Scaffale)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StatoLibro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatoLibro)
        </dd>
        <dt class = "col-sm-2">
            Autori
        </dt>
        <dd class = "col-sm-10">
            <ul>
                @foreach (var item in Model.Autori)
                {
                    <li>
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.LibroID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
