@model csharp_bibliotecaMvc.Models.Libro

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Libro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titolo" class="control-label"></label>
                <input asp-for="Titolo" class="form-control" />
                <span asp-validation-for="Titolo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Scaffale" class="control-label"></label>
                <input asp-for="Scaffale" class="form-control" />
                <span asp-validation-for="Scaffale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatoLibro" class="control-label"></label>
                <select asp-for="StatoLibro" class="form-control">
                    <option value=@Stato.Disponibile>Disponibile</option>
                    <option value=@Stato.Prestito>In Prestito</option>
                </select>
                <span asp-validation-for="StatoLibro" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
